<def-group>
  <definition class="compliance" id="accounts_passwords_pam_tally_unlock_time" version="4">
    <metadata>
      <title>Unlock time account after failed login attempts over ssh</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>Unlock time should be set correctly.</description>
    </metadata>
    <criteria operator="AND" comment="Checks common to both scenarios">
      <criterion test_ref="test_accounts_pam_tally_unlock_time_system-auth" comment="set unlock time for pam_tally2" />
    </criteria>
  </definition>

    <ind:textfilecontent54_test id="test_accounts_pam_tally_unlock_time_system-auth" check="all" check_existence="all_exist" comment="for tally2" version="1">
    <ind:object object_ref="object_accounts_pam_tally_unlock_system-auth" />
    <ind:state state_ref="state_var_accounts_pam_tally_unlock_value" />
  </ind:textfilecontent54_test>

  <external_variable id="var_accounts_pam_tally_unlock" datatype="int" comment="unlock timed" version="1" />

  <ind:textfilecontent54_state id="state_var_accounts_pam_tally_unlock_value" version="1">
    <ind:subexpression datatype="int" operation="less than or equal" var_ref="var_accounts_pam_tally_unlock" />
  </ind:textfilecontent54_state>

  <ind:textfilecontent54_object id="object_accounts_pam_tally_unlock_system-auth" version="1">
    <ind:filepath>/etc/pam.d/sshd</ind:filepath>
    <ind:pattern operation="pattern match">[n\][\s]*auth*[\s]+required+[s\]pam_tally2\.so[\s]*[^\n]*unlock_time=([0-9]+)</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
